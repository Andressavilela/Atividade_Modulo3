@model IEnumerable<Agencia1.Models.Cliente>

@{
    ViewData["Title"] = "Cadastro";
}
<br />



    <div class="text-center">
        <h1 class="display-4" style="text-align: center; color: #00008B; font-family:Verdana ; font-size: 40px;"> <b> Cadastro </b> </h1>
        <br />
        <br />
    </div>
   

    <h4>Receba opções personalizadas de hotéis, pousadas, pacotes para você e sua família.</h4>

    <p>
        <a class="align-self-end" asp-action="Create">Novo Cadastro</a>
    </p>
    <table class="table">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CPF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClienteId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ClienteId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ClienteId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
